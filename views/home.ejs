<%- include ("header.ejs") -%>
<div class="container-fluid">
    <div class="row d-flex justify-content-center">

<% for(var i=newarray.length-1; i>=0; i--){ %>

  <div class="card col-lg-3 col-md-6">
    <img src="<%=newarray[i].photopath%>" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%=newarray[i].title%></h5>
      <p class="card-text"><%=newarray[i].text.slice(0,120)%>...</p>
      <a href="/posts/<%=newarray[i]._id%>" class="btn btn-primary">Read more</a>
    </div>

</div>
<%}%>
</div>
</div>
<%- include ("footer.ejs") -%>